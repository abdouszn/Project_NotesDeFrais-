@model  Project_NotesDeFrais.Models.PolesModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2></h2>
@using (Html.BeginForm("updatePole", "Poles", new{ id = @Model.Pole_ID}, FormMethod.Post, new { @class = "form-vertical", role = "form" }))
{
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Nouveau produit</legend>
        <div class="editor-label">
            @Html.LabelFor(model => @Model.Name , new { @class = "control-label col-sm-1" })
            @Html.TextBoxFor(model => @Model.Name, new { @required = "required", @class = " form-control" })
            @Html.ValidationMessageFor(model => @Model.Name, "", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            <button type="submit" class="btn-success"> Enregistrer </button>
        </div>
    </fieldset>
}


