@model  Project_NotesDeFrais.Models.PolesModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2></h2>
@using (Html.BeginForm("", "Poles/createPole", "", FormMethod.Post, new { @class = "form-vertical", role = "form" }))
{
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Nouveau produit</legend>

    <div class="form-group">
        @Html.LabelFor(model => @Model.Name, new { @class = "control-label col-sm-1" })
        @Html.TextBoxFor(model => @Model.Name, new { @required = "required", @class = " form-control" })
        @Html.ValidationMessageFor(model => @Model.Name, "", new { @class = "text-danger" })
    </div>
        <div class="form-group">
            @Html.Label("manager", new { @class = "control-label col-sm-1" })
            <select class="form-control" name="managerSelect">

                @foreach (var s in @Model.Employees)
                {
                    <option value="@s.Employee_ID">@s.FirstName</option>
                }
            </select>
        </div>
    <div class="form-group">
        <button type="submit" class="btn btn-success"> Enregistrer </button>
    </div>
    </fieldset>
}


