
@model Project_NotesDeFrais.Models.ExpanseReportsModel

@if (@ViewData["employer"] == "true")
{
    <br />
    <br />
    <div class="alert alert-danger">
        <strong> Vous n'est pas encore employer !</strong>
    </div>
}
else
{
    using (Html.BeginForm("", "ExpanseReports/createExpanseReportsDateDay", "", FormMethod.Post, new { @class = "form-vertical", role = "form" }))
    {
        @Html.ValidationSummary(true)
        <fieldset style="padding:5px;">
            <legend>Nouvelle note de frais</legend><br />
            @Html.Label("Author :")<h3>@ViewData["userName"]</h3><br/>
            <div class="form-group">
                @Html.LabelFor(model => @Model.Month, new { @class = "control-label col-sm-2" })
                <select class="form-control" name="month">
                    @for (int i = 1; i <= 12; i++)
                    {
                        if (@i > DateTime.Now.Month)
                        {
                            <option disabled>@i</option>
                        }
                        else
                        {
                            <option>@i</option>
                        }
                    }
                    } 
                </select>
                @Html.ValidationMessageFor(model => @Model.Month, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                @Html.LabelFor(model => @Model.Year, new { @class = "control-label col-sm-2" })
                @Html.TextBoxFor(model => @Model.Year, new { @required = "required", @class = " form-control", @readOnly = "true" })
                @Html.ValidationMessageFor(model => @Model.Year, "", new { @class = "text-danger" })
            </div>
        
            <div class="form-group">
                <button type="submit" class="btn btn-success"> Enregistrer </button>
            </div>
    </fieldset>
    }
}


