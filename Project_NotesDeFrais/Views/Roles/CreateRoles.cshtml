@model  Project_NotesDeFrais.Models.NoteDeFraisModel.RolesModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2></h2>
@using (Html.BeginForm("createRole", "Roles", "", FormMethod.Post  , new { @class = "form-vertical", role = "form" }))
{
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Nouveau Role</legend>

        <div class="form-group">
            @Html.LabelFor(model => @Model.Name, new { @class = "control-label col-sm-1" })
            <select class="form-control" name="roleSelected">
                <option>Admin</option>
                <option>Comptable</option>
                <option>Manager</option>
            </select>
                @Html.ValidationMessageFor(model => @Model.Name, "", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-success"> Enregistrer </button>
        </div>

    </fieldset>
}


