@model IQueryable<Project_NotesDeFrais.Models.EmployeesModel>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>All Employers</h2>
<table class="table table-striped">
    <th>Nom</th>
    <th>Prenom</th>
    <th>Email</th>
    <th>Telephone</th>
    <th>Edition</th>
    <th>Suppression</th>
    @foreach (var s in Model)
    {
        <tr>
            <td>@s.FirstName</td>
            <td>@s.LastName</td>
            <td>@s.Email</td>
            <td>@s.Telephone</td>
            <td><input type="button" value="Edit" class="btn btn-primary" onclick="@("window.location.href='" + @Url.Action("Edit", "Simulation", new { id = s.Employee_ID}) + "'");" /></td>
            <td><input type="button" value="Supprimer" class="btn btn-danger" onclick="@("window.location.href='" + @Url.Action("Delete" , "Simulation" , new { id = s.Employee_ID})+"'");" /></td>
        </tr>
    }
</table>
