@model  Project_NotesDeFrais.Models.ExpanseTypesModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("", "ExpanseTypes/createExpansTypes", "", FormMethod.Post , new { @class = "form-vertical", role = "form" }))
{
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Nouveau type Expanse</legend>
        <div class="form-group">
            @Html.LabelFor(model => @Model.Name ,new { @class = "control-label col-sm-1" } )
            @Html.TextBoxFor(model => @Model.Name, new { @required = "required" , @class= "form-control" })
            @Html.ValidationMessageFor(model => @Model.Name, "", new { @class = "text-danger" })
        </div>
       
        <div class="form-group">
            @Html.LabelFor(model => @Model.Ceiling, new { @class = "control-label col-sm-1" })
            @Html.TextBoxFor(model => @Model.Ceiling, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => @Model.Ceiling, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => @Model.Tvas, new { @class = "control-label col-sm-1" })
            <select class="form-control" name="tvaSelect">
                @foreach (var s in @Model.tvaList)
                {
                    <option value="@s.TVA_ID"> @s.Name </option>
                }
            </select>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => @Model.OnlyManagers, new { @class = "control-label col-sm-1" })
            <input type="checkbox" name="OnlyManagers" value="true"/>
            @Html.ValidationMessageFor(model => @Model.OnlyManagers, "", new { @class = "text-danger" })
        </div><br/><br />
        <div class="form-group">
            @Html.LabelFor(model => @Model.Fixed, new { @class = "control-label col-sm-1" })
            <input type="checkbox" name="Fixed" value="true" />
            @Html.ValidationMessageFor(model => @Model.Fixed, "", new { @class = "text-danger" })
        </div>
       
        <div class="form-group">
            <button type="submit" class="btn btn-success"> Enregistrer </button>
        </div>
</fieldset>
}
