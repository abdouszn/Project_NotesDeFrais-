@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <div class="row">
        
        @if (!User.IsInRole("Admin"))
        {
            <legend class="scheduler-border"><span class="help-block"> Bienvenue sur votre application de gestion des notes de frais!</span></legend>
            <div class="row">
            @if (!User.IsInRole("Manager") && !User.IsInRole("Comptable"))
            {
                <a title="créer une note de frais" class="col-md-4" href="ExpanseReports/AllExpansesReports">
                    <figure>
                        <img src="/Content/images/NDF-n.png" width="168" height="168" />
                        <figcaption class="figure-caption" style="position:absolute; left:15px;">Mes note de frais</figcaption>
                    </figure>
                </a>
            }
            @if (User.IsInRole("Manager") || User.IsInRole("Comptable"))
            {
                <a title="créer une note de frais" class="col-md-4" href="ExpanseReports/AllExpansesReportsToValid">
                    <figure>
                        <img src="/Content/images/NDF-n.png" width="168" height="168" />
                        <figcaption class="figure-caption" style="position:absolute; left:15px;">Mes note de frais</figcaption>
                    </figure>
                </a>
            }
            
                <a title="créer une note de frais" class="col-md-4" href="/Customer">
                    <figure>
                        <img src="/Content/images/customer.png" width="150" height="150" />
