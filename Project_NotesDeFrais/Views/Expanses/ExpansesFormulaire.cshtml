@model Project_NotesDeFrais.Models.ExpansesModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("", "Expanses/createExpanses", "", FormMethod.Post, new { @class = "form-vertical", role = "form" }))
{
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Frais d'une note de frais</legend>
        <div class="editor-label">
            @Html.LabelFor(model => @Model.Day, new { @class = "control-label col-sm-1" })
            @Html.TextBoxFor(model => @Model.Day, new { @required = "required", @class = "control-label col-sm-1"  })
            @Html.ValidationMessageFor(model => @Model.Day, "", new { @class = "text-danger" })
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => @Model.Amount_TTC, new { @class = "control-label col-sm-1" })
            @Html.TextBoxFor(model => @Model.Amount_TTC, new { @required = "required", @class = " form-control" })
            @Html.ValidationMessageFor(model => @Model.Amount_TTC, "", new { @class = "text-danger" })
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => @Model.Amount_HT, new { @class = "control-label col-sm-1" })
            @Html.TextBoxFor(model => @Model.Amount_HT, new { @required = "required", @class = " form-control" })
            @Html.ValidationMessageFor(model => @Model.Amount_HT, "", new { @class = "text-danger" })
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => @Model.Amount_TVA, new { @class = "control-label col-sm-1" })
            @Html.TextBoxFor(model => @Model.Amount_TVA, new { @required = "required", @class = " form-control" })
            @Html.ValidationMessageFor(model => @Model.Amount_TVA, "", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            <button type="submit" class="btn-success"> Enregistrer </button>
        </div>
    </fieldset>
}


