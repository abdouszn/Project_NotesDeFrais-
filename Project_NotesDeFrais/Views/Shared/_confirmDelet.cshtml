<fieldset style="padding:5px;">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="myModalLabel">Confirmer la suppression </h4>
    </div>

    <div class="modal-body">
        <div class="alert alert-danger">Voulez-vous vraiment supprimer cet élément ?</div>
    </div>

    <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Annuler</button>
        <a class="btn btn-danger btn-ok" href="@ViewData["confirmDelete"]">supprimer</a>
    </div>
</fieldset>