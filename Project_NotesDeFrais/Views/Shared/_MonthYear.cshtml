
@model Project_NotesDeFrais.Models.ExpanseReportsModel

@using (Html.BeginForm("", "ExpanseReports/index", "", FormMethod.Post))
{
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>nouvelle note de frais</legend><br />
        @Html.Label("Author :")<h3>@ViewData["userName"]</h3>
        <div class="editor-label">
            @Html.LabelFor(model => @Model.Month)
            <select class="selectpicker" name="Month">
                <option>1</option>
                <option>2</option>
                <option>3</option>
                <option>4</option>
                <option>5</option>
                <option>6</option>
                <option>7</option>
                <option>8</option>
                <option>9</option>
                <option>10</option>
                <option>11</option>
                <option>12</option>
            </select>
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => @Model.Year)
            <div class="editor-label">
                @Html.LabelFor(model => @Model.Year)
                @Html.TextBoxFor(model => @Model.Year, new { @required = "required" })
                @Html.ValidationMessageFor(model => @Model.Year, "", new { @class = "text-danger" })
            </div>
        </div>

        <p>
            <button type="submit" class="btn-success"> Enregistrer </button>
        </p>
    </fieldset>
}




